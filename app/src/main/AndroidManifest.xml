<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizApp"
        tools:targetApi="31">
        <activity
            android:name=".activites.activites.ResultActivity"
            android:exported="false" />
        <activity
            android:name=".activites.activites.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activites.activites.QuestionActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.QuizAppAction" />
        <activity
            android:name=".activites.activites.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".activites.activites.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activites.activites.MainActivity"
            android:exported="false" />
        <activity
            android:name=".activites.activites.LoginIntro"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>